# -- Twelve Data API --
TWELVEDATA_API_KEY=
# Get from: https://twelvedata.com/account/api-keys

# -- Telegram Bot --
TELEGRAM_BOT_TOKEN=
# Get from: @BotFather on Telegram -> /newbot

TELEGRAM_CHAT_ID=
# Get from: https://api.telegram.org/bot<TOKEN>/getUpdates

# -- Server Configuration --
PORT=3001
DAILY_SUMMARY_HOUR=23
NODE_ENV=development
LOG_LEVEL=info

# -- Trading Configuration --
DEFAULT_MODE=SIMULATION
DEFAULT_PAIR=XAU/USD
DEFAULT_TIMEFRAME=5min
STARTING_BALANCE=10000
LOT_SIZE=0.1
STOP_LOSS_PIPS=150
TAKE_PROFIT_PIPS=300
TRAILING_STOP_DISTANCE=150
TRAILING_STOP_ACTIVATION=100

# -- Market Hours Configuration --
# Enable/disable market hours filtering (default: true)
ENABLE_MARKET_HOURS=true

# Auto-stop monitoring when markets close (default: false)
AUTO_STOP_ON_MARKET_CLOSE=false

# Send Telegram warnings when trades blocked by market hours (default: true)
MARKET_HOURS_WARNING=true
